.hud-root {
  position: absolute;
  inset: 0;
  pointer-events: none;
  font-family: 'Digital-7', 'Orbitron', 'Inter', sans-serif;
  color: #39ff14;
  text-transform: uppercase;
  text-shadow: 0 0 6px rgba(57, 255, 20, 0.55);
}

.hud-layer {
  position: absolute;
  z-index: 200;
  pointer-events: none;
}

.hud-layer--top {
  top: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 24px 32px;
  gap: 24px;
}

.hud-layer--left {
  bottom: 32px;
  left: 32px;
  display: flex;
  flex-direction: column;
  gap: 18px;
  max-width: 260px;
}

.hud-layer--right {
  bottom: 32px;
  right: 32px;
}

.hud-layer--top-right {
  top: 32px;
  right: 32px;
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.hud-layer--center {
  bottom: 32px;
  left: 50%;
  transform: translateX(-50%);
}

.hud-player-status {
  display: flex;
  flex-direction: column;
  gap: 10px;
  min-width: 220px;
}

.hud-player-faction {
  font-size: 14px;
  letter-spacing: 0.08em;
  opacity: 0.8;
}

.hud-health-bar {
  display: flex;
  flex-direction: column;
  gap: 6px;
}

.hud-health-bar__label {
  display: flex;
  justify-content: space-between;
  font-size: 14px;
  letter-spacing: 0.08em;
}

.hud-health-bar__value {
  color: #ffffff;
  text-shadow: 0 0 6px rgba(255, 255, 255, 0.65);
}

.hud-health-bar__track {
  position: relative;
  height: 14px;
  border: 2px solid rgba(82, 255, 120, 0.55);
  background: rgba(12, 18, 28, 0.85);
  overflow: hidden;
}

.hud-health-bar__fill {
  height: 100%;
  background: linear-gradient(90deg, rgba(57, 255, 20, 0.9), rgba(57, 255, 170, 0.9));
  box-shadow: 0 0 12px rgba(57, 255, 128, 0.55);
  transition: width 160ms ease-out;
}

.hud-health-bar.warning .hud-health-bar__fill {
  background: linear-gradient(90deg, rgba(255, 183, 0, 0.95), rgba(255, 230, 102, 0.9));
  box-shadow: 0 0 12px rgba(255, 183, 0, 0.55);
}

.hud-health-bar.danger .hud-health-bar__fill {
  background: linear-gradient(90deg, rgba(255, 7, 58, 0.95), rgba(255, 102, 123, 0.9));
  box-shadow: 0 0 12px rgba(255, 7, 58, 0.55);
}

.hud-stage-info {
  display: flex;
  flex-direction: column;
  gap: 4px;
  padding: 12px 18px;
  border: 2px solid rgba(102, 166, 255, 0.65);
  background: rgba(10, 10, 10, 0.65);
  backdrop-filter: blur(4px);
  letter-spacing: 0.08em;
}

.hud-stage-info__name {
  font-size: 14px;
  color: #93c5fd;
}

.hud-stage-info__timer {
  font-size: 20px;
  color: #ffffff;
  text-shadow: 0 0 8px rgba(147, 197, 253, 0.75);
}

.hud-smart-messages {
  display: flex;
  flex-direction: column;
  gap: 6px;
}

.hud-smart-messages__item {
  padding: 6px 10px;
  border-left: 3px solid #ffb700;
  background: rgba(24, 19, 3, 0.65);
  color: #ffb700;
  letter-spacing: 0.08em;
}

.hud-joystick-ghost {
  width: 128px;
  height: 128px;
  border: 2px dashed rgba(57, 255, 20, 0.25);
  border-radius: 50%;
  position: relative;
  background: radial-gradient(rgba(57, 255, 20, 0.15), rgba(10, 15, 20, 0.05));
}

.hud-joystick-ghost__inner {
  position: absolute;
  inset: 20px;
  border-radius: 50%;
  border: 2px solid rgba(57, 255, 20, 0.35);
}

.hud-teammates {
  display: flex;
  flex-direction: column;
  gap: 8px;
  max-height: 260px;
  overflow: hidden;
}

.hud-teammate {
  display: flex;
  gap: 10px;
  padding: 8px 10px;
  background: rgba(10, 15, 20, 0.65);
  border: 2px solid rgba(57, 255, 20, 0.25);
  backdrop-filter: blur(3px);
  max-width: 220px;
}

.hud-teammate__avatar {
  width: 32px;
  height: 32px;
  background: rgba(57, 255, 20, 0.35);
  border: 2px solid rgba(57, 255, 20, 0.5);
}

.hud-teammate__info {
  flex: 1;
}

.hud-teammate__name {
  font-size: 12px;
  letter-spacing: 0.08em;
  margin-bottom: 4px;
}

.hud-teammate__health-track {
  height: 6px;
  background: rgba(12, 18, 28, 0.8);
  border: 1px solid rgba(57, 255, 20, 0.35);
  overflow: hidden;
}

.hud-teammate__health-fill {
  height: 100%;
  background: linear-gradient(90deg, rgba(57, 255, 20, 0.9), rgba(102, 255, 178, 0.9));
  transition: width 160ms ease-out;
}

.hud-teammate__hint {
  margin-top: 4px;
  font-size: 11px;
  color: #ffb700;
}

.hud-teammate--wounded {
  border-color: rgba(255, 183, 0, 0.55);
}

.hud-teammate--incapacitated {
  border-color: rgba(255, 7, 58, 0.65);
  animation: hud-alert 1s infinite alternate;
}

.hud-teammate--controlled {
  border-color: rgba(160, 99, 255, 0.65);
  animation: hud-alert 0.75s infinite alternate;
}

.hud-teammate--highlight {
  box-shadow: 0 0 16px rgba(255, 183, 0, 0.35);
}

@keyframes hud-alert {
  from {
    filter: brightness(1);
  }
  to {
    filter: brightness(1.35);
  }
}

.hud-combat {
  display: flex;
  flex-direction: column;
  gap: 12px;
  pointer-events: auto;
}

.hud-button {
  position: relative;
  min-width: 120px;
  padding: 18px 22px;
  font-size: 16px;
  letter-spacing: 0.12em;
  border: 2px solid rgba(57, 255, 20, 0.75);
  background: rgba(8, 12, 18, 0.82);
  color: #39ff14;
  cursor: pointer;
  transition: transform 80ms ease, box-shadow 120ms ease;
  pointer-events: auto;
}

.hud-button:active {
  transform: scale(0.96);
  box-shadow: 0 0 18px rgba(57, 255, 20, 0.45);
}

.hud-button.disabled,
.hud-button:disabled {
  opacity: 0.45;
  cursor: not-allowed;
}

.hud-button--primary {
  min-width: 148px;
  font-size: 18px;
  background: rgba(12, 20, 32, 0.82);
  border-color: rgba(57, 255, 140, 0.85);
  box-shadow: 0 0 14px rgba(57, 255, 140, 0.32);
}

.hud-button--secondary {
  font-size: 14px;
  border-color: rgba(147, 197, 253, 0.65);
  color: #93c5fd;
  box-shadow: 0 0 12px rgba(147, 197, 253, 0.25);
}

.hud-button__badge {
  display: inline-block;
  margin-top: 6px;
  padding: 2px 6px;
  font-size: 12px;
  color: #0b0f16;
  background: #ffb700;
}

.hud-button__progress-ring {
  position: absolute;
  inset: 6px;
  border-radius: 12px;
  background:
    conic-gradient(
      rgba(147, 197, 253, 0.85) calc(var(--progress) * 360deg),
      rgba(12, 20, 32, 0.35) 0deg
    );
  opacity: 0.55;
  pointer-events: none;
}

.hud-button.is-reloading {
  border-color: rgba(147, 197, 253, 0.85);
}

.hud-strategic {
  display: flex;
  flex-direction: column;
  gap: 12px;
  pointer-events: auto;
}

.hud-strategic__swap {
  padding: 12px 16px;
  background: rgba(8, 12, 18, 0.75);
  border: 2px solid rgba(102, 166, 255, 0.65);
  color: #93c5fd;
  letter-spacing: 0.1em;
  cursor: pointer;
  transition: transform 90ms ease, box-shadow 140ms ease;
  pointer-events: auto;
}

.hud-strategic__swap:active {
  transform: scale(0.97);
  box-shadow: 0 0 12px rgba(102, 166, 255, 0.45);
}

.hud-strategic__value {
  display: block;
  margin-top: 6px;
  font-size: 12px;
  color: rgba(147, 197, 253, 0.85);
}

.hud-strategic__slots {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.hud-slot {
  padding: 10px 14px;
  border: 2px solid rgba(57, 255, 20, 0.35);
  background: rgba(8, 12, 18, 0.7);
  letter-spacing: 0.08em;
  transition: box-shadow 140ms ease, border-color 140ms ease;
}

.hud-slot-button {
  width: 100%;
  text-align: left;
  cursor: pointer;
  pointer-events: auto;
  transition: transform 90ms ease;
}

.hud-slot-button:active {
  transform: scale(0.97);
}

.hud-slot-button:disabled {
  opacity: 0.45;
  cursor: not-allowed;
}

.hud-slot__label {
  font-size: 12px;
  opacity: 0.75;
}

.hud-slot__value {
  display: block;
  margin-top: 6px;
  font-size: 14px;
  color: #ffffff;
}

.hud-slot--active {
  box-shadow: 0 0 16px rgba(255, 183, 0, 0.35);
}

.hud-slot--heal.hud-slot--active {
  border-color: rgba(57, 255, 200, 0.85);
  box-shadow: 0 0 18px rgba(57, 255, 200, 0.32);
}

.hud-slot--throwable.hud-slot--active {
  border-color: rgba(255, 183, 0, 0.85);
  box-shadow: 0 0 18px rgba(255, 183, 0, 0.38);
}

.hud-slot--heal {
  border-color: rgba(57, 255, 140, 0.55);
}

.hud-slot--throwable {
  border-color: rgba(255, 183, 0, 0.55);
}

.hud-ammo {
  min-width: 220px;
  padding: 12px 18px;
  border: 2px solid rgba(57, 255, 20, 0.35);
  background: rgba(8, 12, 18, 0.75);
  text-align: center;
  letter-spacing: 0.08em;
}

.hud-ammo__name {
  font-size: 14px;
  margin-bottom: 6px;
  color: rgba(255, 255, 255, 0.85);
}

.hud-ammo__count {
  font-size: 20px;
  margin-bottom: 8px;
  color: #ffffff;
  text-shadow: 0 0 8px rgba(57, 255, 20, 0.5);
}

.hud-ammo__divider {
  margin: 0 4px;
  opacity: 0.7;
}

.hud-ammo__track {
  position: relative;
  height: 6px;
  background: rgba(12, 18, 28, 0.85);
  border: 1px solid rgba(57, 255, 20, 0.35);
}

.hud-ammo__fill {
  height: 100%;
  background: linear-gradient(90deg, rgba(57, 255, 20, 0.9), rgba(102, 255, 178, 0.9));
  transition: width 160ms ease-out;
}

.hud-context {
  position: absolute;
  right: 32px;
  top: 50%;
  transform: translateY(-50%);
  display: flex;
  flex-direction: column;
  gap: 10px;
  pointer-events: auto;
}

.hud-context__button {
  padding: 16px 22px;
  border: 2px solid rgba(255, 183, 0, 0.75);
  background: rgba(32, 24, 4, 0.72);
  color: #ffb700;
  letter-spacing: 0.1em;
  position: relative;
  cursor: pointer;
}

.hud-context__label {
  font-size: 16px;
}

.hud-context__description {
  display: block;
  margin-top: 6px;
  font-size: 12px;
  color: rgba(255, 231, 158, 0.92);
}

.hud-context__progress {
  position: absolute;
  inset: 6px;
  border: 2px solid rgba(255, 183, 0, 0.65);
  border-radius: 12px;
  background:
    conic-gradient(
      rgba(255, 183, 0, 0.85) calc(var(--progress) * 360deg),
      rgba(32, 24, 4, 0.35) 0deg
    );
  opacity: 0.55;
  pointer-events: none;
}

.hud-context__hint {
  font-size: 12px;
  color: rgba(255, 231, 158, 0.9);
  letter-spacing: 0.08em;
}

@media (max-width: 1320px) {
  .hud-layer--top {
    padding: 18px 20px;
  }

  .hud-layer--left,
  .hud-layer--right,
  .hud-layer--top-right {
    left: 24px;
    right: 24px;
  }
}
